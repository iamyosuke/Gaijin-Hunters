<div class="min-h-screen bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-3xl mx-auto">
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
      <div class="bg-gradient-to-r from-blue-500 to-indigo-600 px-6 py-4">
        <h1 class="text-2xl font-bold text-white">プロフィール編集</h1>
      </div>

      <div class="p-6">
        <%= simple_form_for @profile, html: { class: 'space-y-6' } do |f| %>
        <%= f.error_notification class: "p-4 bg-red-100 border-l-4 border-red-500 text-red-700 rounded mb-6" %>

        <%= f.input :bio, label: "自己紹介", 
                      input_html: { rows: 4, class: "w-full px-3 py-2 text-gray-700 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200" },
                      label_html: { class: "block text-sm font-medium text-gray-700 mb-1" } %>

        <%= f.input :birth_date, as: :date, html5: true, label: "生年月日",
                      input_html: { class: "w-full px-3 py-2 text-gray-700 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200" },
                      label_html: { class: "block text-sm font-medium text-gray-700 mb-1" } %>

        <%= f.input :gender, collection: [['選択してください', ''], ['男性', 'male'], ['女性', 'female'], ['その他', 'other']],
                      label: "性別", 
                      input_html: { class: "w-full px-3 py-2 text-gray-700 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200" },
                      label_html: { class: "block text-sm font-medium text-gray-700 mb-1" } %>

        <%= f.input :location, label: "場所",
                      input_html: { class: "w-full px-3 py-2 text-gray-700 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200" },
                      label_html: { class: "block text-sm font-medium text-gray-700 mb-1" } %>

        <%= f.input :interests, label: "興味・関心",
                      input_html: { class: "w-full px-3 py-2 text-gray-700 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200" },
                      label_html: { class: "block text-sm font-medium text-gray-700 mb-1" } %>

        <%= f.input :language, label: "言語",
                      input_html: { class: "w-full px-3 py-2 text-gray-700 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200" },
                      label_html: { class: "block text-sm font-medium text-gray-700 mb-1" } %>

        <div class="flex justify-end pt-6">
          <%= f.button :submit, "更新", class: "px-6 py-3 bg-blue-600 text-white font-medium rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 transition duration-200" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>