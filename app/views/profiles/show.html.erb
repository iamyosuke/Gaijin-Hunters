<div class="min-h-screen bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-3xl mx-auto">
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
      <div class="bg-gradient-to-r from-blue-500 to-indigo-600 px-6 py-4">
        <h1 class="text-2xl font-bold text-white">プロフィール</h1>
      </div>

      <div class="p-6">
        <div class="space-y-6">
          <div>
            <h2 class="text-sm font-medium text-gray-500">メールアドレス</h2>
            <p class="mt-1 text-lg text-gray-900"><%= current_user.email %></p>
          </div>

          <div>
            <h2 class="text-sm font-medium text-gray-500">自己紹介</h2>
            <p class="mt-1 text-lg text-gray-900"><%= @profile.bio.presence || "未設定" %></p>
          </div>

          <div>
            <h2 class="text-sm font-medium text-gray-500">生年月日</h2>
            <p class="mt-1 text-lg text-gray-900"><%= @profile.birth_date&.strftime("%Y年%m月%d日") || "未設定" %></p>
          </div>

          <div>
            <h2 class="text-sm font-medium text-gray-500">性別</h2>
            <p class="mt-1 text-lg text-gray-900"><%= @profile.gender.presence || "未設定" %></p>
          </div>

          <div>
            <h2 class="text-sm font-medium text-gray-500">場所</h2>
            <p class="mt-1 text-lg text-gray-900"><%= @profile.location.presence || "未設定" %></p>
          </div>

          <div>
            <h2 class="text-sm font-medium text-gray-500">興味・関心</h2>
            <p class="mt-1 text-lg text-gray-900"><%= @profile.interests.presence || "未設定" %></p>
          </div>

          <div>
            <h2 class="text-sm font-medium text-gray-500">言語</h2>
            <p class="mt-1 text-lg text-gray-900"><%= @profile.language.presence || "未設定" %></p>
          </div>

          <div class="flex justify-end pt-6">
            <%= link_to "プロフィールを編集", edit_profile_path, class: "px-6 py-3 bg-blue-600 text-white font-medium rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 transition duration-200" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>