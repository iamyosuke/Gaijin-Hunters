<div class="min-h-screen bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">すべてのユーザー</h1>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <% @users.each do |user| %>
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <% if user.profile&.avatar&.attached? %>
              <%= image_tag user.profile.avatar, class: "h-12 w-12 rounded-full" %>
              <% else %>
              <div class="h-12 w-12 rounded-full bg-gray-300 flex items-center justify-center">
                <span class="text-gray-500 font-bold"><%= user.email[0].upcase %></span>
              </div>
              <% end %>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">
                  <%= user.email %>
                </dt>
                <dd class="flex items-center text-sm text-gray-900">
                  <div class="truncate">
                    <%= user.profile&.bio || "自己紹介はありません" %>
                  </div>
                </dd>
              </dl>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 px-4 py-4 sm:px-6">
          <%= link_to "詳細", "#", class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
          <!-- 詳細ページへのリンクは後で実装します -->
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>